<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TrustFrameworkPolicy
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns="http://schemas.microsoft.com/online/cpim/schemas/2013/06"
  DeploymentMode="Development"
  UserJourneyRecorderEndpoint="urn:journeyrecorder:applicationinsights"
  PolicySchemaVersion="0.3.0.0"
  TenantId="dotnet2023workshop.onmicrosoft.com"
  PolicyId="B2C_1A_custom_signup_signin"
  PublicPolicyUri="http://dotnet2023workshop.onmicrosoft.com/B2C_1A_custom_signup_signin">

  <BasePolicy>
    <TenantId>dotnet2023workshop.onmicrosoft.com</TenantId>
    <PolicyId>B2C_1A_TrustFrameworkExtensions</PolicyId>
  </BasePolicy>

  <BuildingBlocks>
    <ClaimsSchema>
      <!-- Question 1 Claims -->
      <ClaimType Id="AskForInformation_header">
        <DisplayName> Quremos saber un poco más de ti. A continuación vamos a hacerte unas preguntas para conocer ciertos aspectos relacionados con el workshop.</DisplayName>
        <DataType>string</DataType>
        <UserInputType>Paragraph</UserInputType>
      </ClaimType>
      <ClaimType Id="extension_Question1">
        <DisplayName>¿Sabes algo de flujos de autenticación?</DisplayName>
        <DataType>string</DataType>
        <UserInputType>RadioSingleSelect</UserInputType>
        <Restriction>
            <Enumeration Text="Si" Value="True" SelectByDefault="false" />
            <Enumeration Text="No" Value="False" SelectByDefault="false" />
        </Restriction>
      </ClaimType>
      <ClaimType Id="question1ApiBody">
        <DisplayName>Json</DisplayName>
        <DataType>string</DataType>
        <AdminHelpText>Json</AdminHelpText>
        <UserHelpText>Json</UserHelpText>
      </ClaimType>
      <!-- Question 2 Claims -->
      <ClaimType Id="extension_Question2">
        <DisplayName>¿Te suena OIDC?</DisplayName>
        <DataType>string</DataType>
        <UserInputType>RadioSingleSelect</UserInputType>
        <Restriction>
            <Enumeration Text="Si" Value="True" SelectByDefault="false" />
            <Enumeration Text="No" Value="False" SelectByDefault="false" />
        </Restriction>
      </ClaimType>
      <ClaimType Id="question2ApiBody">
        <DisplayName>Json</DisplayName>
        <DataType>string</DataType>
        <AdminHelpText>Json</AdminHelpText>
        <UserHelpText>Json</UserHelpText>
      </ClaimType> 
      <!-- Question 3 Claims -->
      <ClaimType Id="extension_Question3">
        <DisplayName>¿Has gestionado alguna vez Azure AD?</DisplayName>
        <DataType>string</DataType>
        <UserInputType>RadioSingleSelect</UserInputType>
        <Restriction>
            <Enumeration Text="Si" Value="True" SelectByDefault="false" />
            <Enumeration Text="No" Value="False" SelectByDefault="false" />
        </Restriction>
      </ClaimType>
      <ClaimType Id="question3ApiBody">
        <DisplayName>Json</DisplayName>
        <DataType>string</DataType>
        <AdminHelpText>Json</AdminHelpText>
        <UserHelpText>Json</UserHelpText>
      </ClaimType> 
      <!-- Question 4 Claims -->
      <ClaimType Id="extension_Question4">
        <DisplayName>¿Has usado B2C?</DisplayName>
        <DataType>string</DataType>
        <UserInputType>RadioSingleSelect</UserInputType>
        <Restriction>
            <Enumeration Text="Si" Value="True" SelectByDefault="false" />
            <Enumeration Text="No" Value="False" SelectByDefault="false" />
        </Restriction>
      </ClaimType>
      <ClaimType Id="question4ApiBody">
        <DisplayName>Json</DisplayName>
        <DataType>string</DataType>
        <AdminHelpText>Json</AdminHelpText>
        <UserHelpText>Json</UserHelpText>
      </ClaimType>
      <!-- Ask for information flag -->
      <ClaimType Id="extension_mustAskForInformation">
	    <DisplayName>Must ask for information</DisplayName>
	    <DataType>boolean</DataType>
	    <UserHelpText>Specifies whether user must be asked</UserHelpText>
	  </ClaimType>
    </ClaimsSchema>


    <ClaimsTransformations>
      <ClaimsTransformation Id="GenerateQuestion1ApiBody" TransformationMethod="GenerateJson">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="extension_Question1" TransformationClaimType="inputClaim"/>
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="question1ApiBody" TransformationClaimType="outputClaim"/>
        </OutputClaims>
      </ClaimsTransformation>
      <ClaimsTransformation Id="GenerateQuestion2ApiBody" TransformationMethod="GenerateJson">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="extension_Question2" TransformationClaimType="inputClaim"/>
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="question2ApiBody" TransformationClaimType="outputClaim"/>
        </OutputClaims>
      </ClaimsTransformation>
      <ClaimsTransformation Id="GenerateQuestion3ApiBody" TransformationMethod="GenerateJson">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="extension_Question3" TransformationClaimType="inputClaim"/>
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="question3ApiBody" TransformationClaimType="outputClaim"/>
        </OutputClaims>
      </ClaimsTransformation>
      <ClaimsTransformation Id="GenerateQuestion4ApiBody" TransformationMethod="GenerateJson">
        <InputClaims>
          <InputClaim ClaimTypeReferenceId="extension_Question4" TransformationClaimType="inputClaim"/>
        </InputClaims>
        <OutputClaims>
          <OutputClaim ClaimTypeReferenceId="question4ApiBody" TransformationClaimType="outputClaim"/>
        </OutputClaims>
      </ClaimsTransformation>
    </ClaimsTransformations>

    <ContentDefinitions>
      <!-- This content definition is to render an error page that displays unhandled errors. -->
